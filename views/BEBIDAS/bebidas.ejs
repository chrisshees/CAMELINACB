<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <% title %>
    </title>
    <link href="/public/css/output.css" rel="stylesheet">
    <script>
        function searchTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('bebidasTable');
            const trs = table.getElementsByTagName('tr');

            for (let i = 1; i < trs.length; i++) {
                const tds = trs[i].getElementsByTagName('td');
                let showRow = false;

                for (let j = 1; j < tds.length - 1; j++) { // Exclude IDUSUARIO and Accion columns
                    if (tds[j].innerText.toLowerCase().indexOf(filter) > -1) {
                        showRow = true;
                        break;
                    }
                }

                trs[i].style.display = showRow ? '' : 'none';
            }
        }
    </script>
</head>

<body>
    <div class="container mx-auto mt-10 px-4 sm:px-6 lg:px-8">
        <div class="p-4 rounded-lg shadow backdrop-blur-lg bg-transparent">
            <div class="overflow-x-auto">
                <div id="alert-container"></div>
                <% if (message) { %>
                    <script>
                        const alertContainer = document.getElementById('alert-container');
                        const newAlert = document.createElement('div');
                        newAlert.className = 'p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg flex';
                        newAlert.setAttribute('role', 'alert');
                        newAlert.innerHTML = `
            <svg class="animate-spin h-5 w-5 mr-3 text-white" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8H4z"></path>
            </svg>
            <span class="font-medium"> <%= message %> </span>
        `;
                        alertContainer.appendChild(newAlert);

                        // Espera 3 segundos antes de desaparecer la alerta
                        setTimeout(() => {
                            newAlert.classList.add('hidden'); // Oculta la alerta
                        }, 2500);
                    </script>
                    <% } %>

                        <div class="flex flex-col justify-between items-center mb-4">
                            <h1 class="text-6xl font-bold mb-4 text-gray-50 italic"
                                style="text-shadow: 0 0 5px #d30ae9, 0 0 10px #d30ae9, 0 0 20px #d30ae9, 0 0 40px #d30ae9">
                                Cocteles Y Bebidas</h1>
                            <div
                                class="flex flex-row justify-between items-center space-x-4 mb-4 text-center w-1/2 h-1/2">
                                <a href="/createBebidas"
                                    class=" bg-pink-500 hover:bg-pink-700 text-gray-50 font-bold py-4 px-3 rounded-full transition ease-in-out delay-150  hover:-translate-y-1 hover:scale-110 duration-300">
                                    AGREGAR BEBIDA
                                </a>
                                <a href="/categorias"
                                    class=" bg-pink-500 hover:bg-pink-700 text-gray-50 font-bold py-4 px-3 rounded-full transition ease-in-out delay-150  hover:-translate-y-1 hover:scale-110 duration-300">
                                    IR A CATEGORIAS
                                </a>
                            </div>
                        </div>
                        
                        <div class="relative overflow-auto shadow-md sm:rounded-lg">
                            <div class="mb-4">
                                <input type="text" id="searchInput" onkeyup="searchTable()" placeholder="Buscar bebidas..." class="px-4 py-2 border rounded-lg w-full">
                            </div>
                            <table id="bebidasTable" class="min-w-full bg-pink-50 border border-gray-200 rounded-lg shadow-lg">
                                <thead>
                                    <tr class="bg-pink-300 text-pink-900 text-center border">
                                        <th scope="col" class="px-16 py-3 border-b">Foto</th>
                                        <th scope="col" hidden class="py-3 px-4 border-b">IDBEBIDAS</th>
                                        <th scope="col" class="py-3 px-4 border-b">Nombre</th>
                                        <th scope="col" class="py-3 px-4 border-b">Precio</th>
                                        <th scope="col" class="py-3 px-4 border-b">Descripcion</th>
                                        <th scope="col" class="py-3 px-4 border-b">Estado</th>
                                        <th scope="col" hidden class="py-3 px-4 border-b">Categoria</th>
                                        <th scope="col" class="py-3 px-4 border-b">Categoria</th>
                                        <th scope="col" class="py-3 px-4 border-b">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center bg-transparent">
                                    <% bebidas.forEach((row)=> { %>
                                        <tr>
                                            <td class="border-b px-4 py-2">
                                                <img src="/resources/Imagenes_Productos/<%= row.FOTO %>"
                                                    alt="Beverage Image" class="w-16 md:w-32 max-w-full max-h-full" />
                                            </td>
                                            <td hidden class="border-b px-4 py-2">
                                                <%= row.IDBEBIDAS %>
                                            </td>
                                            <td class="border-b px-4 py-2">
                                                <%= row.NOMBRE %>
                                            </td>
                                            <td class="border-b px-4 py-2">
                                                <%= row.PRECIO %>
                                            </td>

                                            <td class="border-b px-4 py-2">
                                                <%= row.DESCRIPCION %>
                                            </td>
                                            <td class="border-b px-4 py-2">
                                                <% if (row.ESTADO===1) { %>
                                                    <span
                                                        class="border border-green-400 bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-0.5 rounded">
                                                        Activo
                                                    </span>
                                                    <% } else { %>
                                                        <span
                                                            class="border border-gray-400 bg-gray-100 text-gray-800 text-xs font-semibold px-2.5 py-0.5 rounded">
                                                            Inactivo
                                                        </span>
                                                        <% } %>
                                            </td>
                                            <td hidden class="border-b px-4 py-2">
                                                <%= row.IDCATEGORIA %>
                                            </td>
                                            <td class="border-b px-4 py-2">
                                                <%= row.CATEGORIA_NOMBRE %>
                                            </td>
                                            <td class="border-b px-4 py-2">
                                                <div class="flex flex-col justify-center space-y-1">
                                                    <a href="/editBebidas/<%= row.IDBEBIDAS %>"
                                                        class="text-gray-50 bg-yellow-300 hover:bg-yellow-500 focus:outline-none focus:ring-4 focus:ring-yellow-300 font-medium rounded-full text-sm px-3 py-1.5 text-center dark:focus:ring-yellow-900">Editar</a>
                                                    <a href="/deleteBebidas/<%= row.IDBEBIDAS %>"
                                                        class="text-gray-50 bg-red-600 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-3 py-1.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Eliminar</a>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                       </div>
            </div>
        </div>
    </div>




</body>

</html>